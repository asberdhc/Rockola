@model List<Rockola.ViewModels.SearchResultDTO>

@for (int i = 0; i < @Model.Count; i++)
{
    <div class="card">
        <div class="row no-gutters">
            <div class="col-4 mx-auto my-auto bg-dark">
                <img onclick="btnReproducirVideo('@Model[i].VideoId')" src="http://img.youtube.com/vi/@Model[i].VideoId/mqdefault.jpg" alt="@Model[i].Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model[i].Title</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <button class="btn-success" onclick="btnadd('@Model[i].VideoId')">Add to PlayList</button>
                    <input id=i type="hidden" value="@Model[i].VideoId" />
                    <p class="card-text"><small class="text-muted">@Model[i].VideoId</small></p>
                </div>
            </div>
        </div>
    </div>
}